{
  "OutputRoot": "C:\\temp\\SyntheticOutput",
  "Seed": 12345,

  // Number of distinct org prefixes to generate (randomized from OrgPrefix settings)
  "NumOrganizations": 10,

  // Population shape
  "PatientsPerOrg": {
    "Min": 3,
    "Max": 100
  },
  "ExamsPerPatient": {
    "Min": 1,
    "Max": 3
  },

  // How many modalities per exam (the generator will pick from Modalities below)
  "ModalitiesPerExam": {
    "Min": 1,
    "Max": 6
  },

  // Available modalities to sample from (must align with Profiles keys)
  "Modalities": [ "CT", "PT", "MR", "NM", "XA", "CR", "SR" ],

  // Study date window (years offset from today). e.g., -3..0 = last 3 years
  "DateRangeYears": {
    "Min": -3,
    "Max": 0
  },

  // NEW: Explicit exam pairing weights (percentages). Sums to ~100 (generator can normalize).
  //  - CtPtPercent: chance an exam is exactly CT+PT
  //  - CtNmPercent: chance an exam is exactly CT+NM
  //  - MixedPercent: chance an exam uses a mixed/random combo from ModalitiesPerExam/Modalities
  "ExamMix": {
    "CtPtPercent": 70,
    "CtNmPercent": 10,
    "MixedPercent": 20
  },

  // Organization prefix generator
  "OrgPrefix": {
    "PrefixLength": 3,
    "Alphabet": "ABCDEFGHIJKLMNOPQRSTUVWXYZ"
  },

  // Patient ID composition (composite ID: <ORG>-<INITIALS>-<CODE>-<NUMBER>)
  "PatientId": {
    "InitialsLength": 2,
    "InitialsAlphabet": "ABCDEFGHIJKLMNOPQRSTUVWXYZ",
    "RandomCodeLength": 6,
    "RandomCodeAlphabet": "ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789",
    "RandomNumberDigits": 3,
    "Separator": "-",

    // Legacy fields retained (ignored by current ID generator; safe to keep for compatibility)
    "Prefix": "P",
    "Digits": 6,
    "StartFrom": 1
  },

  // Global image defaults (per-profile overrides below)
  "Defaults": {
    "Rows": 128,
    "Cols": 128,
    "BitsAllocated": 8,
    "BitsStored": 8,
    "PhotometricInterpretation": "MONOCHROME2"
  },

  // Per-modality generation profiles (series counts, slice counts, names, and optional size overrides)
  "Profiles": {
    "CT": {
      "SeriesPerStudy": {
        "Min": 2,
        "Max": 3
      },
      "StandardStudyFileCounts": [ 128, 256, 512 ],
      "SeriesDescriptions": [ "CTAC", "CT-Diagnostic" ],
      "StudyDescriptions": [ "CT Diagnostic", "CTAC" ],
      "Rows": 512,
      "Cols": 512
    },
    "PT": {
      "SeriesPerStudy": {
        "Min": 1,
        "Max": 2
      },
      "StandardStudyFileCounts": [ 64, 96 ],
      "SeriesDescriptions": [ "PET WB" ],
      "StudyDescriptions": [ "PET Whole Body" ],
      "Rows": 64,
      "Cols": 64
    },
    "NM": {
      "SeriesPerStudy": {
        "Min": 1,
        "Max": 2
      },
      "StandardStudyFileCounts": [ 32, 64 ],
      "SeriesDescriptions": [ "NM WB", "Recon" ],
      "StudyDescriptions": [ "NM Whole Body" ],
      "Rows": 64,
      "Cols": 64
    },
    "MR": {
      "SeriesPerStudy": {
        "Min": 1,
        "Max": 2
      },
      "StandardStudyFileCounts": [ 64, 128 ],
      "SeriesDescriptions": [ "MR-T1", "MR-T2" ],
      "StudyDescriptions": [ "MRI Head" ],
      "Rows": 256,
      "Cols": 256
    },
    "XA": {
      "SeriesPerStudy": {
        "Min": 2,
        "Max": 3
      },
      "StandardStudyFileCounts": [ 256, 512 ],
      "SeriesDescriptions": [ "XA Series" ],
      "StudyDescriptions": [ "Angiography" ],
      "Rows": 1024,
      "Cols": 1024
    },
    "CR": {
      "SeriesPerStudy": {
        "Min": 1,
        "Max": 1
      },
      "StandardStudyFileCounts": [ 1 ],
      "SeriesDescriptions": [ "CR Image" ],
      "StudyDescriptions": [ "CR Radiograph" ],
      "Rows": 2048,
      "Cols": 2048
    },
    "SR": {
      "SeriesPerStudy": {
        "Min": 1,
        "Max": 1
      },
      "StandardStudyFileCounts": [ 1 ],
      "SeriesDescriptions": [ "SR Content" ],
      "StudyDescriptions": [ "Structured Report" ],
      "Rows": 64,
      "Cols": 64
    }
  }
}
